<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="censo.Vistas.Popup.compraenmayorista">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label Text="Compra en mayoristas" FontAttributes="Bold"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry Placeholder="En que mayorista?" HorizontalTextAlignment="Center" Margin="20"/>
            <Entry Placeholder="Encuentra surtido?" HorizontalTextAlignment="Center" Margin="20"/>
            <Entry Placeholder="Encuentra ofertas" HorizontalTextAlignment="Center" Margin="20"/>
            <Button Text="Ok" Margin="60"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>