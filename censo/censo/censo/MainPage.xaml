<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:censo"
             x:Class="censo.MainPage"
             BackgroundImage="backgroundLogin.jpg">
    
    

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="330" BackgroundColor="White"  Orientation="Vertical">
        <Image Source="userLogin.png" WidthRequest="25" HorizontalOptions="Start" VerticalOptions="Center" />
        <Entry  TextColor="Black" Placeholder=" Username" HorizontalOptions="StartAndExpand" HeightRequest="35" PlaceholderColor="Black"/>

        <Image Source="claveLogin.png" WidthRequest="25" HorizontalOptions="Start" VerticalOptions="Center"/>
        <Entry IsPassword="true"  TextColor="Black" Placeholder=" Password" HorizontalOptions="StartAndExpand" HeightRequest="35" PlaceholderColor="Black"/>
        </StackLayout>
</ContentPage>
